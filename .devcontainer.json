// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
//
// This devcontainer is configured for Docker-in-Docker (DinD).
// Docker is installed inside the container, allowing you to run containers
// from within the devcontainer.
{
    "name": "batch_file_processor",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {}
    },
    "runArgs": [
        "-e", "DISPLAY=:99",
        "-p", "6080:6080",
        "--privileged"
    ],
    "forwardPorts": [
        6080
    ],
    "portsAttributes": {
        "6080": {
            "label": "noVNC",
            "protocol": "http",
            "onAutoForward": "openBrowser"
        }
    },
    "remoteUser": "vscode",
    "updateRemoteUserUID": true,
    "containerEnv": {
        "HOME": "/home/vscode"
    },
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/batch-file-processor,type=bind",
    "workspaceFolder": "/workspaces/batch-file-processor",
    "postCreateCommand": "chmod +x /workspaces/batch-file-processor/start_x11.sh",
    "postStartCommand": "bash /workspaces/batch-file-processor/start_x11.sh",
    "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
        "source=batch-file-processor-home,target=/home/vscode,type=volume"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-azuretools.vscode-docker"
            ]
        }
    }
}
